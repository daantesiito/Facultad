    repetir 2
      repetir 99
        si (HayFlorEnLaEsquina)
          mientras (HayFlorEnLaEsquina)
            tomarFlor
        si (HayPapelEnLaEsquina)
          mientras (HayPapelEnLaEsquina)
            tomarPapel
        mover
      si (HayFlorEnLaEsquina)
        mientras (HayFlorEnLaEsquina)
          tomarFlor
      si (HayPapelEnLaEsquina)
        mientras (HayPapelEnLaEsquina)
          tomarPapel
      derecha
      mover
      derecha
      repetir 99
        si (HayFlorEnLaEsquina)
          mientras (HayFlorEnLaEsquina)
            tomarFlor
        si (HayPapelEnLaEsquina)
          mientras (HayPapelEnLaEsquina)
            tomarPapel
        mover
      si (HayFlorEnLaEsquina)
        mientras (HayFlorEnLaEsquina)
          tomarFlor
      si (HayPapelEnLaEsquina)
        mientras (HayPapelEnLaEsquina)
          tomarPapel
      repetir 3
        derecha
      mover
      repetir 3
        derecha
    repetir 99
      si (HayFlorEnLaEsquina)
        mientras (HayFlorEnLaEsquina)
          tomarFlor
      si (HayPapelEnLaEsquina)
        mientras (HayPapelEnLaEsquina)
          tomarPapel
      mover
    si (HayFlorEnLaEsquina)
      mientras (HayFlorEnLaEsquina)
        tomarFlor
    si (HayPapelEnLaEsquina)
      mientras (HayPapelEnLaEsquina)
        tomarPapel
