package tp3.ejercicio1;

import tp1.ejercicio8.Queue;

public class punto11 {

	public static boolean resolver(GeneralTree<Integer> arbol) {
		if (arbol.isEmpty()) 
			return true;
		return resolverRec(arbol);
	}
	
	private static boolean resolverRec(GeneralTree<Integer> arbol) {
		Queue<Integer> cola = new Queue<Integer>();
		Integer sumaElem = 0;
		Integer nivel = 1;
		boolean ok = true;
		cola.enqueue(arbol.getData());
		cola.enqueue(null);
		while (!cola.isEmpty() && ok == true) {
			GeneralTree<Integer> dato = cola.dequeue();
			if (dato != null) 
				sumaElem += 1;			
				if (dato.hasChildren()) {
					for (GeneralTree<Integer> c : dato.getChildren()) {
						cola.enqueue(c);
					}
				}
			else {
				if (!cola.isEmpty()) {
					cola.enqueue(null);
					if (sumaElem != nivel)
						ok = false;
					sumaElem = 0;
				}
				nivel += 1;
			}
		}
		return ok;
	}
}
