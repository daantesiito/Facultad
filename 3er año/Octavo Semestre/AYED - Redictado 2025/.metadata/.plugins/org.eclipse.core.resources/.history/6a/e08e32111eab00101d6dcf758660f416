package parciales;

import java.util.LinkedList;
import java.util.List;

public class parcial1erfecha2025GT {

	public static List<Integer> caminoPartidadAlternante(GeneralTree<Integer> arbol) {
		LinkedList<Integer> lista = new LinkedList<Integer>();
		LinkedList<Integer> listaMax = new LinkedList<Integer>();
		if (arbol.isEmpty())
			return listaMax;
		recorrido(arbol, lista, listaMax);
		return listaMax;
	}
	
	private static void recorrido(GeneralTree<Integer> arbol, GeneralTree<Integer> hijo, LinkedList<Integer> lista, LinkedList<Integer> listaMax) {
		Integer datoHijo = hijo.getData();
		Integer datoPadre = arbol.getData();
		lista.add(dato);
		if (dato % 2 == 0 && arbol)
		if (arbol.isLeaf()) {
			if (lista.size() > listaMax.size()) {
				listaMax.clear();
				listaMax.addAll(lista);
			}
		}
		else {
			if (arbol.hasChildren()) {
				for (GeneralTree<Integer> c : arbol.getChildren()) {
					recorrido(arbol, c, lista, listaMax);
				}
			}
		}
		
	}
	
}
