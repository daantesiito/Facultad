package parciales;

public class comparadorDeArbolesGenerales {

	public boolean esInferiorProfundo(GeneralTree<Integer> arbol1, GeneralTree<Integer> arbol2) {
		if (arbol1 == null || arbol1.isEmpty())
			return true;
		if (arbol2 == null || arbol2.isEmpty()) 
			return false;
		return recorrido(arbol1, arbol2);
	}
	
	private boolean recorrido(GeneralTree<Integer> arbol1, GeneralTree<Integer> arbol2) {
		if (arbol1.getData() < arbol2.getData()) {
			
			boolean h1 = arbol1.hasChildren();
			boolean h2 = arbol1.hasChildren();
			
			if (!h1 && !h2) 
				return true;
			
			if (!h1 && h2) 
				return true;
			
			
			if (h1 && !h2) 
				return false;
			
			if (h1 && h2) {
				int suma1 = 0;
				int suma2 = 0;
				for (GeneralTree<Integer> c : arbol1.getChildren()) {
					suma1 += c.getData();
				}
				for (GeneralTree<Integer> c : arbol2.getChildren()) {
					suma2 += c.getData();
				}
				if (suma1 < suma2) {
					return true;
				}
				
				var it1 = arbol1.getChildren().iterator();
				var it2 = arbol2.getChildren().iterator();
				while (it1.hasNext() && it2.hasNext())
					recorrido(it1,it2);
			}			
		}
		else
			return false;
	}
	
}
