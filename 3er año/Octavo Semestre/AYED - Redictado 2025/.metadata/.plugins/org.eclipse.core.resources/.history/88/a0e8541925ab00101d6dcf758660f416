package parciales;

import java.util.LinkedList;
import java.util.List;

public class parcial1erfecha2025GT {

	public static List<Integer> caminoPartidadAlternante(GeneralTree<Integer> arbol) {
		LinkedList<Integer> lista = new LinkedList<Integer>();
		LinkedList<Integer> listaMax = new LinkedList<Integer>();
		if (arbol.isEmpty())
			return listaMax;
		lista.add(arbol.getData());
		recorrido(arbol, lista, listaMax);
		return listaMax;
	}
	
	private static void recorrido(GeneralTree<Integer> arbol, LinkedList<Integer> lista, LinkedList<Integer> listaMax) {
		boolean add = false;
		Integer datoPadre = arbol.getData();
		Integer datoHijo = hijo.getData();
		if ((datoHijo % 2 == 0) && (datoPadre % 2 == 1) || 
			(datoHijo % 2 == 1) && (datoPadre % 2 == 0)) {
			add = true;
			lista.add(datoHijo);
		}
		if (hijo.isLeaf()) {
			if (lista.size() > listaMax.size()) {
				listaMax.clear();
				listaMax.addAll(lista);
			}
		}
		else {
			if (hijo.hasChildren()) {
				for (GeneralTree<Integer> c : hijo.getChildren()) {
					recorrido(c, lista, listaMax);
				}
			}
		}
		if (add == true)
			lista.removeLast();	
	}
	
}
