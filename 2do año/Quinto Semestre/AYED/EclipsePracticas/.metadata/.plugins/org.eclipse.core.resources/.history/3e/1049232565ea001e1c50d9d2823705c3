package practica1;

public class ejercicio5c {
	
	private int[] numeros;
	
	public void CalculadoraEstadisticas(int[] numeros) {
        this.numeros = numeros;
    }
	
	public static void CalcularMaxMinProm() {
		int max = -1;
		int min = 9999;
		int suma = 0;
		
		for (int i = 0; i < numeros.length; i++) {
			
			if (numeros[i] > max) {
				max = numeros[i];
			}
			
			if (numeros[i] < min) {
				min = numeros[i];
			}
			
			suma = suma + numeros[i];
			
		}
		
		System.out.println("Máximo: " + max);
        System.out.println("Mínimo: " + min);
        System.out.println("Promedio: " + (double) suma / numeros.length);
	}
}